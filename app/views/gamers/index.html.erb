<p id="notice"><%= notice %></p>

<h1>Gamers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gamers.each do |gamer| %>
      <tr>
        <td><%= gamer.name %></td>
        <td><%= gamer.game %></td>
        <td><%= link_to 'Show', gamer %></td>
        <td><%= link_to 'Edit', edit_gamer_path(gamer) %></td>
        <td><%= link_to 'Destroy', gamer, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'delete_gamer' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gamer', new_gamer_path %>
